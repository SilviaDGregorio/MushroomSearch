    <%= form.select :population, Mushroom.populations.map { |key, value| [key.humanize, value] }, :include_blank => true, :selected => params[:population] %>
  </div>
  <div>
    <p>Habitat</p>
    <%= form.select :habitat, Mushroom.habitats.map { |key, value| [key.humanize, value] }, :include_blank => true, :selected => params[:habitat] %>
  </div>
  <%= submit_tag("Index") %>
  <%= link_to "Clear Search", request.path, class: "cancel-button" %>
<% end %>

<%= render "table", mushrooms: @mushrooms %>
